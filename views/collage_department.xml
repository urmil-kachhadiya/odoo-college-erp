<!-- collage_department.xml -->
<odoo>
    <record id="view_collage_department_list" model="ir.ui.view">
        <field name="name">collage.department.list</field>
        <field name="model">collage.department</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="student_count"/>
            </list>
        </field>
    </record>

    <record id="view_collage_department_form" model="ir.ui.view">
        <field name="name">collage.department.form</field>
        <field name="model">collage.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_collage_department" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">collage.department</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
